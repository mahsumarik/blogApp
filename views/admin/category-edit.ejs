<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head") %>
  </head>
  <style>
    img {
      max-width: 100%;
      height: auto;
    }
  </style>
  <body>
    <%- include('../partials/nav') %>

    <div class="container mt-3">
      <div class="row">
        <div class="col-md-12 mt-3">
          <div class="card card-body">
            <form method="post">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <input
                type="hidden"
                name="categoryid"
                value="<%= category.id %>"
              />
              <div class="row mb-3">
                <label for="title" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-8">
                  <input
                    type="text"
                    class="form-control"
                    id="name"
                    name="name"
                    value="<%=category.name%>"
                  />
                </div>
              </div>

              <div class="row mb-3">
                <div class="col-sm-8 offset-sm-2">
                  <button type="submit" class="btn btn-primary">Save</button>
                </div>
              </div>
            </form>
          </div>
          <p>blog sayısı <%= countBlog %></p>
          <table class="table table-bordered table-striped mt-3">
            <thead>
              <tr>
                <th style="width: 50px">id</th>
                <th style="width: 150px">image</th>
                <th>title</th>
                <th style="width: 220px"></th>
              </tr>
            </thead>
            <tbody>
              <% blogs.forEach(blog => { %>
              <tr>
                <td>#<%= blog.dataValues.id %></td>
                <td>
                  <img
                    src="/static/images/<%= blog.dataValues.image %>"
                    class="image-fluid"
                    alt=""
                  />
                </td>
                <td><%= blog.dataValues.title %></td>
                <td>
                  <a
                    class="btn btn-sm btn-primary"
                    href="/admin/blogs/<%= blog.dataValues.id %>"
                    >edit</a
                  >
                  <form
                    style="display: inline-block"
                    action="/admin/categories/remove"
                    method="post"
                  >
                    <input
                      type="hidden"
                      name="_csrf"
                      value="<%= csrfToken %>"
                    />
                    <input type="hidden" name="blogid" value="<%= blog.id %>" />
                    <input
                      type="hidden"
                      name="categoryid"
                      value="<%= category.id %>"
                    />
                    <button type="submit" class="btn btn-sm btn-danger">
                      remove from category
                    </button>
                  </form>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
