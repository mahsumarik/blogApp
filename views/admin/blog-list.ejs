<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head") %>
  </head>
  <style>
    img {
      max-width: 100%;
      height: auto;
    }
  </style>
  <body>
    <%- include('../partials/nav') %>

    <div class="container mt-3">
      <div class="row">
        <div class="col-md-12 mt-3">
          <% if (action !="undefined" && action=="edit") { %>
          <div class="alert alert-success">
            Blog id number <%=blogid%> has been updated
          </div>
          <% } %> <% if (action !="undefined" && action=="create") { %>
          <div class="alert alert-success">Blog is added</div>
          <% } %> <% if (action !="undefined" && action=="delete") { %>
          <div class="alert alert-success">Blog is deleted</div>
          <% } %>
          <table class="table table-bordered table-striped">
            <thead>
              <tr>
                <th style="width: 50px">id</th>
                <th style="width: 150px">image</th>
                <th>title</th>
                <th>category</th>
                <th style="width: 130px"></th>
              </tr>
            </thead>
            <tbody>
              <% blogs.forEach(blog => { %>
              <tr>
                <td>#<%= blog.dataValues.id %></td>
                <td>
                  <img
                    src="/static/images/<%= blog.dataValues.image %>"
                    class="image-fluid"
                    alt=""
                  />
                </td>
                <td><%= blog.dataValues.title %></td>
                <td>
                  <% blog.categories.forEach(category => { %>
                  <p><%= category.name %></p>
                  <% }) %>
                </td>
                <td>
                  <a
                    class="btn btn-sm btn-primary"
                    href="/admin/blogs/<%= blog.dataValues.id %>"
                    >edit</a
                  >
                  <a
                    class="btn btn-sm btn-danger"
                    href="/admin/blog/delete/<%= blog.dataValues.id %>"
                    >delete</a
                  >
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
